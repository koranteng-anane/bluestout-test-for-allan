{% comment %} FIX #1: The schema JSON had syntax issues (missing commas / trailing commas). Cleaned it up and added sensible defaults. {% endcomment %}

<div class="featured-products" style="background-color: {{ section.settings.background_color }};">
  <div class="featured-products__container page-width">

    {% comment %} FIX #2: If the heading is empty, don’t render an empty heading tag. {% endcomment %}
    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_tag }} class="featured-products__heading">
        {{ section.settings.heading | escape }}
      </{{ section.settings.heading_tag }}>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="featured-products__grid" role="list">
        {% comment %} FIX #3: Use the money filter so prices show in the correct store format. {% endcomment %}
        {% for product in section.settings.collection.products limit: section.settings.products_count %}
          <div class="featured-products__card" role="listitem">
            {% comment %} FIX #4: Replaced clickable div + inline JS with a real link (better accessibility, no JS needed). {% endcomment %}
            <a class="featured-products__image-link" href="{{ product.url }}">
              {% if product.featured_image != blank %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | default: product.title | escape }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% endif %}
            </a>

            <div class="featured-products__info">
              <div class="featured-products__title">{{ product.title | escape }}</div>

              <div class="featured-products__price">
                {% if product.compare_at_price > product.price %}
                  <span class="featured-products__price--sale">
                    {{ product.price | money }}
                  </span>
                  <s>{{ product.compare_at_price | money }}</s>
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>

              {% comment %} FIX #5: Removed the undefined addToCart JS and kept the CTA simple with a product link. {% endcomment %}
              <a class="featured-products__button" href="{{ product.url }}">
                View product
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="featured-products__empty" role="status">
        No collection selected. Please choose a collection in the theme editor.
      </div>
    {% endif %}

  </div>
</div>

{% comment %} FIX #6: `{% stylesheet %}` isn’t valid here, so this uses a normal `<style>` block. {% endcomment %}
<style>
  .featured-products {
    padding: 60px 0;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .featured-products__grid {
      grid-template-columns: 1fr;
    }
  }

  .featured-products__card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.08);
  }

  .featured-products__image-link {
    display: block;
    cursor: pointer;
    text-decoration: none;
  }

  .featured-products__image-link img {
    display: block;
    width: 100%;
    height: auto;
  }

  .featured-products__info {
    padding: 16px;
  }

  .featured-products__title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .featured-products__price {
    margin-bottom: 12px;
  }

  .featured-products__price--sale {
    font-weight: 700;
  }

  .featured-products__button {
    display: inline-block;
    background: #1a1a1a;
    color: #fff;
    padding: 12px 24px;
    text-align: center;
    text-decoration: none;
    border-radius: 6px;
  }
</style>

{% comment %} FIX #7: Finished fixing the schema JSON (commas, options list, and added defaults). {% endcomment %}
{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured products"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 2,
      "max": 8,
      "step": 1,
      "label": "Number of Products",
      "default": 4
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
